<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8"
    src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>



<div class="container fa-border">
    <div class="row">
        <div class="col-md-4 col-sm-12 border border-success" style="border-radius: 1rem;">
            <div class="card-body ">

                <h4 style="margin-top: 30px;" class="text-center">Add Category</h4>

                <form action="/admin/add-category" method="POST">
                    <div>
                        <label class="form-label" for="name">Category</label>
                        <input type="text" id="name" name="name" class="form-control " />
                    </div>


                    <div class="mt-3">
                        <label class="form-label" for="price">Sub-Category</label>
                        <input type="text" id="subCategory" required name="subCategory" class="form-control " />
                    </div>

                    <input type="text" name="status" value="true" style="display: none;">
                    <div class="text-center">
                        <button class="mt-3 btn btn-primary " type="submit" onclick="return validateForm()">Add
                            Category</button>
                    </div>
                </form>

            </div>
            <hr>
            {{!-- <div class="col-4" style="border-radius: 1rem;"> --}}
                <div class="card-body ">

                    <h4 style="margin-top: 30px;" class="text-center">Add Discount</h4>

                    <form action="/admin/add-discount" method="POST">
                        <div>
                            <label class="form-label" for="category">Category</label>
                            <input type="text" id="category" name="category" class="form-control" />
                        </div>


                        <div class="mt-3">
                            <label class="form-label" for="price">Discount</label>
                            <input type="text" id="discount" required name="discount" class="form-control " />
                            {{#if categoryDiscountErr}}
                            <p style="text-align: center; color: red">{{categoryDiscountErr}}</p>
                            {{/if}}
                        </div>


                        <input type="text" name="status" value="true" style="display: none;">
                        <div class="text-center">
                            <button class="mt-3 btn btn-primary " type="submit" onclick="return validateForm()">Add
                                Discount</button>
                        </div>
                    </form>

                </div>
                {{!--
            </div> --}}
        </div>
        {{!-- //////////////////////////////////////////////////////////////// --}}
            <div class="col-md-1"></div>
        
        <div class="col-md-5 col-sm-12">
            <div class="col-2 ms-auto mt-4 mb-3">
                {{!-- <a href="/admin/add-category" class="btn btn-success ">Add Category</a> --}}
            </div>

            <div class="row">
                <div class="col-1">
                    <span>No.</span>
                </div>

                <div class="col-3">
                    <span>Categories</span>
                </div>

                <div class="col-4">
                    <span>Discount</span>
                </div>

                <div class="col-4">
                    <span>Sub-categories</span>
                </div>
            </div>
            {{#each category}}
            <hr>
            <div class="row mt-3">
                <div class="col-1">
                    <span>{{count @index}}</span>
                </div>

                <div class="col-3">
                    <span>{{this.name}}</span>
                </div>

                <div class="col-4">
                    <span>{{this.discount}}%</span>
                </div>

                <div class="col-4">
                    {{#each this.subCategories}}
                    <div class="m-2">{{this}}</div>
                    {{/each}}
                </div>
            </div>
            {{/each}}
            <hr>
            

        </div>
    </div>
</div>

<div class="text-center">
    <a href="/admin/brand-list">click </a><span>here to go to brands-list</span>
</div>

<script>
    var table = document.getElementsByTagName('table')[0],
        rows = table.getElementsByTagName('tr'),
        text = 'textContent' in document ? 'textContent' : 'innerText';

    for (var i = 1, len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i;
    }
</script>

<script>
    $(document).ready(function () {
        $('#usersTable').DataTable();
    });
</script>
