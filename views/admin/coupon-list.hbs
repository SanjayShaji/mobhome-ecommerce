<div class="container">
    <div class="row">
        <div class="col-3">
            <h3>Add Coupon</h3>
            <form action="/admin/add-coupon" method="POST">
                <div>
                    <label class="form-label" for="name">Code</label>
                    <input type="text" id="code" name="code" class="form-control form-control-lg" />

                </div>

                <div class="mt-3">
                    <label class="form-label" for="price">Discount</label>
                    <input type="number" id="discount" required name="discount" class="form-control form-control-lg" />
                </div>


                <div class="mt-3">
                    <label class="form-label" for="date">Expiry Date</label>
                    <input type="date" id="expiryDate" required name="expiryDate" class="form-control form-control-lg" />
                </div>

                {{!-- <input type="text" name="status" value="true" style="display: none;"> --}}
                <button class="mt-4 btn btn-primary btn-lg btn-block" type="submit">Add Coupon</button>
                <p style="text-align: center; color:red" id="ErrorSubmit"></p>

            </form>
        </div>
        <div class="col-1"></div>
        <div class="col-8 ">

            <table class="table mt-5" id="usersTable">
                <thead>
                    <tr>
                        {{!-- <th scope="col">#</th> --}}
                        <th scope="col">No.</th>
                        <th scope="col">Coupon</th>
                        <th scope="col">Discount</th>
                        <th scope="col">Expiry Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each coupon}}
                    {{!-- {{#if this.status}} --}}
                    <tr>
                        {{!-- <th scope="row">1</th> --}}
                        <td></td>
                        <td>{{this.code}}</td>
                        <td>{{this.discount}}</td>
                        <td>{{this.expiryDate}}</td>
                        <td>
                            <a style="color: white; text-decoration: none;" href="/admin/delete-coupon/{{this._id}}"
                                onclick="return confirm('do you want to delete the coupon')"><button
                                    class="btn btn-danger">delete</button></a>
                        </td>
                    </tr>
                    {{!-- {{/if}} --}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>

<script>
    var table = document.getElementsByTagName('table')[0],
        rows = table.getElementsByTagName('tr'),
        text = 'textContent' in document ? 'textContent' : 'innerText';

    for (var i = 1, len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i;
    }

</script>
