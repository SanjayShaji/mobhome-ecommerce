<div class="container">
    <div class="row ">
        <div class="text-center">
            <h3 class="card-title">Addresses</h3><!-- End .card-title -->
        </div>
        <div class="text-end mt-4">
            <a href="/add-address" class="btn btn-success">Add Address</a><!-- End .card-title -->
        </div>
        {{#each address}}
        <div class="col-8">
            <div class="card-body">
                <p>{{this.firstName}}
                    {{this.lastName}}<br>
                    {{this.address}},
                    {{this.city}}<br>
                    {{this.state}}, Pin Code:
                    {{this.pincode}}
                    {{this.country}}<br>
                    {{this.email}}<br>

                </p>
                <hr>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header border-bottom-0">
                                <button type="button" class="btn-close" data-mdb-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>

                            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                                <div class="card-body ">

                                    <h3 class="text-center mt-4">Edit Address</h3>


                                    <form action="/edit-address/{{this._id}}" method="post">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>First Name *</label>
                                                <input name="firstName" type="text" value="{{this.firstName}}"
                                                    class="form-control" required>
                                            </div><!-- End .col-sm-6 -->

                                            <div class="col-sm-6">
                                                <label>Last Name *</label>
                                                <input name="lastName" type="text" value="{{this.lastName}}"
                                                    class="form-control" required>
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->

                                        <label>Country *</label>
                                        <input name="country" type="text" value="{{this.country}}" class="form-control"
                                            required>

                                        <label>Address *</label>
                                        <input name="address" type="text" value="{{this.address}}" class="form-control"
                                            {{!-- placeholder="House number and Street name" --}} required>

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Town / City *</label>
                                                <input name="city" type="text" value="{{this.city}}"
                                                    class="form-control" required>
                                            </div><!-- End .col-sm-6 -->

                                            <div class="col-sm-6">
                                                <label>State *</label>
                                                <input name="state" type="text" value="{{this.state}}"
                                                    class="form-control" required>
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Pin code *</label>
                                                <input name="pincode" type="text" value="{{this.pincode}}"
                                                    class="form-control" required>
                                            </div><!-- End .col-sm-6 -->

                                            <div class="col-sm-6">
                                                <label>Phone *</label>
                                                <input name="phone" type="tel" value="{{this.phone}}"
                                                    class="form-control" required>
                                            </div><!-- End .col-sm-6 -->
                                        </div><!-- End .row -->

                                        <label>Email address *</label>
                                        <input name="email" type="email" value="{{this.email}}" class="form-control"
                                            required>

                                        {{!-- <input name="userId" value="{{vUser._id}}" type="text" hidden> --}}
                                        {{!-- <div class="text-center"> --}}
                                            <button class=" btn btn-success m-4" type="submit">submit</button>
                                            {{!--
                                        </div> --}}
                                    </form>


                                </div>
                            </div>
                            <div class="modal-footer d-flex justify-content-center border-top-0 py-4">

                            </div>
                        </div>
                    </div>
                </div>

                {{!--
                ///////////////////////////////////////////////////////////////////////////
                --}}
            </div><!-- End .card-body -->
        </div>
        <div class="col-4 mt-5">
            <a style="cursor: pointer;" data-mdb-toggle="modal" data-mdb-target="#exampleModal{{this._id}}">
                <i class="icon-edit"></i></a>

            <a href="/delete-address/{{this._id}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash"
                    viewBox="0 0 16 16">
                    <path
                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                    <path fill-rule="evenodd"
                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                </svg>
            </a>
        </div>
        {{/each}}
    </div>
</div>