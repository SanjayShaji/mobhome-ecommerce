

  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 ">

            <h3 class="mb-5">OTP Verify</h3>
            {{#if otpCodeErr}}
                <p class="btn-danger">{{otpCodeErr}}</p>
              {{/if}}
            <form action="/otp-verify" method="POST">
              
              <div>
                <label for="code">Enter verification Code</label>
                <input type="number" id="code" name="code" class="form-control form-control-lg" required />
              </div>

              <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            </form>
            <div class="text-center">
             <input class="mt-3" style="text-align: center; border: none;" id="otpTimer">
              <form action="/resent" method="post">
              <button class="mt-3 btn btn-success btn-lg btn-block" type="submit" id="display">Resent Otp</button>
              </form>
              </div>
            <hr>
          </div>
        </div>

      </div>
    </div>
  </div>


<script>
  var timeleft = 20;
  
  document.getElementById('display').style.display = 'none'

  var timer = setInterval(()=>{
    if(timeleft<=0){
      clearInterval(timer);
      document.getElementById('otpTimer').style.display = "none";
      document.getElementById('display').style.display = 'block'
    }     

    document.getElementById('otpTimer').value = timeleft;
    timeleft -=1;
  },1000);


</script>
